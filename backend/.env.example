PAYMENT_SECRET_KEY=

# File Storage Configuration
STORAGE_DRIVER=local
STORAGE_CLOUD=s3
STORAGE_ROOT=/storage
MAX_FILE_SIZE=10240

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Monitoring and Analytics
ANALYTICS_ENABLED=true
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
